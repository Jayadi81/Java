public class Array1dimensi {
    public static void main(String[] args) {
    // Array digunakan untuk menyimpan banyak nilai dalam satu variabel
    String[] cars = {"Volvo", "BMW", "Ford", "Mazda"};
    System.out.println(cars[2]);    
    
    /**
     *  Looping Array
     *  Untuk mengetahui berapa banyak elemen yang dimiliki array, gunakan properti length:
     */
    String[] Cars = {"volvo","BMW","Ford","Mazda"};
    System.out.println(Cars.length);
 
    /**
     * Looping array
     * Anda dapat mengulang elemen array dengan perulangan for, dan menggunakan properti panjang 
     */
    String [] carS = {"Volvo", "Toyota", "Ferrari", "Daihatzu",};
    for (int i = 0; i < carS.length; i++) {
        System.out.println(carS[i]);
    }
    
    // Multidimensional Array 
     int[][] myNumbers = { {1, 2, 3, 4}, {5, 6, 7} };
    System.out.println(myNumbers[1][2]); //
  }
}
